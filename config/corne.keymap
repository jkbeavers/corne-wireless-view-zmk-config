#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/pointing.h>

#define AS(keycode) &as LS(keycode) keycode     // Autoshift Macro
&mt {
    flavor = "tap-preferred";
};
&sl {
    release-after-ms = <200>;
};
&caps_word {
    continue-list = <UNDERSCORE MINUS BACKSPACE K_CANCEL>;
};

/ {
     macros {
        hold_tab: hold_tab {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings
                = <&macro_param_1to1>
                , <&macro_press &kp MACRO_PLACEHOLDER>
                , <&macro_tap &kp TAB>
                , <&macro_pause_for_release>
                , <&macro_param_1to1>
                , <&macro_release &kp MACRO_PLACEHOLDER>
                ;
        };
        caps_toggle: caps_toggle {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &caps_word>
                , <&macro_tap &kp K_CANCEL>
                ;
        };
    };
    behaviors {
        as: auto_shift {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping_term_ms = <210>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        skq: sticky_key_quick_release {
          compatible = "zmk,behavior-sticky-key";
          label = "STICKY_KEY_QUICK_RELEASE";
          #binding-cells = <1>;
          bindings = <&kp>;
          release-after-ms = <1000>;
          quick-release;
        };
        td_sl2_en: tap_dance_sl2_enter {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&sl 2>, <&kp ENTER>;
        };
        td_sks_tab: tap_dance_skshift_tab {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <250>;
            bindings = <&skq LSHIFT>, <&kp TAB>;
        };
        td_sks_esc: tap_dance_skshift_esc {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&skq LSHIFT>, <&kp ESC>;
        };
    };
    keymap {
        compatible = "zmk,keymap";

        base {
            bindings = <
&none       &kp Q  &kp W  &kp E   &kp R   &kp T                  &kp Y    &kp U   &kp I      &kp O    &kp P     &kp BACKSPACE
&kp MINUS   &kp A  &kp S  &kp D   &kp F   &kp G                  &kp H    &kp J   &kp K      &kp L    &kp SEMI  &kp SQT
&none       &kp Z  &kp X  &kp C   &kp V   &kp B                  &kp N    &kp M   &kp COMMA  &kp DOT  &kp FSLH  &kp LALT
                       &td_sks_tab &mt LCTRL SPACE  &td_sl2_en              &lt 3 TAB   &sl 1  &td_sks_esc
            >;
        };

        syms {
            bindings = <
&none      &kp EXCL     &kp AT         &kp HASH       &kp DOLLAR    &kp PERCENT                  &kp CARET                  &kp AMPERSAND          &kp ASTRK            &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &none
&trans     &kp DOT      &kp MINUS      &kp PLUS       &kp LBKT      &kp LEFT_PARENTHESIS         &kp RIGHT_PARENTHESIS      &kp RBKT               &kp UNDER            &kp COMMA             &kp BSPC               &kp EQUAL
&none      &kp TILDE    &kp PIPE       &kp GRAVE      &kp FSLH      &kp LBRC                     &kp RBRC                   &kp BSLH               &kp LESS_THAN        &kp GREATER_THAN      &kp QUESTION           &none
                             &trans     &kp ENTER         &kp ESC                                 &caps_toggle                 &trans             &trans
            >;
        };

        nums {
            bindings = <
&kp C_VOL_UP      &kp EXCL  &kp AT  &kp HASH    &kp DOLLAR   &kp PERCENT       &kp CARET      &kp AMPERSAND  &kp ASTRK  &trans  &trans  &none
&kp C_VOL_DN      &kp N1    &kp N2  &kp N3      &kp N4       &kp N5            &kp N6         &kp N7         &kp N8     &kp N9  &kp N0  &trans
&kp C_PLAY_PAUSE  &trans    &trans  &trans      &trans       &trans            &trans         &trans         &trans     &trans  &trans  &none
                                 &trans  &trans       &trans            &trans         &kp ENTER       &kp ESCAPE
            >;
        };

        nav {
            bindings = <
&kp C_VOL_UP      &kp LEFT_WIN    &trans        &trans          &trans           &trans             &trans     &trans    &trans   &trans     &trans    &bt BT_CLR
&kp C_VOL_DN      &mmv MOVE_LEFT  &mmv MOVE_UP  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &mkp LCLK          &kp LEFT   &kp DOWN  &kp UP   &kp RIGHT  &kp BSPC  &trans
&kp C_PLAY_PAUSE  &trans          &trans        &trans          &hold_tab LCTRL  &hold_tab LALT     &kp PG_DN  &kp PG_UP  &trans   &trans     &bt BT_PRV    &bt BT_NXT
                        &trans        &trans          &trans                              &trans     &trans    &trans
            >;  
        };
    };
};
